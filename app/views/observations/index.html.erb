<a href="<%= root_path %>" class="underline text-orange-500">Home</a>
<h2 class="text-2xl font-bold leading-tight my-4 text-indigo-500">Overall statistics</h2>

<div class="my-5">
  <p><strong>Total number of events:</strong> <%= @observations.count %></p>
  <p><strong>Events left:</strong> <%= @observations.where(value:'left').count %>
  <strong>Events right:</strong> <%= @observations.where(value:'right').count %></p>
</div>

<div class="my-5">
  <p><strong>Number of events observed by humans:</strong> <%= @observations_with_humans.count %></p>
  <p><strong>Events left:</strong> <%= @observations_with_humans.where(value:'left').count %>
  <strong>Events right:</strong> <%= @observations_with_humans.where(value:'right').count %></p>
</div>

<h2 class="text-xl font-bold leading-tight mt-18 text-indigo-500">All observations</h2>
<ol>
  <% @observations.each do |obs| %>
    <li>
      <%= obs.end %>: <%= obs.value %>
    </li>
  <% end %>
</ol>
